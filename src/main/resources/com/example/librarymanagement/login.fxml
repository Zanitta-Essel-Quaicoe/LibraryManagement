<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefHeight="300.0" prefWidth="400.0" fx:controller="com.example.librarymanagement.controller.AuthenticationController">
    <children>
        <VBox alignment="CENTER" spacing="20" layoutX="50.0" layoutY="50.0" prefWidth="300.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" >
            <children>
                <Label text="Login" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

                <TextField fx:id="usernameField" promptText="Username" prefWidth="250.0" maxWidth="400"/>

                <PasswordField fx:id="passwordField" promptText="Password" prefWidth="250.0" maxWidth="400"/>

                <Button fx:id="loginButton" text="Login" prefWidth="100.0" onAction="#login"/>

                <Label fx:id="errorMessage" textFill="red" visible="false"/>
            </children>
        </VBox>
    </children>
</AnchorPane>
